<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/v4"
    android:layout_marginTop="@dimen/v4"
    android:background="@color/colorAppBackground"
    android:orientation="horizontal"
    android:padding="@dimen/v4">

    <ImageView
        android:layout_width="@dimen/committee_member_image_height_width"
        android:layout_height="@dimen/committee_member_image_height_width"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/v4"
        android:scaleType="centerInside"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/v8"
        android:layout_marginStart="@dimen/v8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCommMemberName"
            style="@style/customTextView_16"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMemberDesignation"
            style="@style/customTextView_12"
            android:maxLines="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivCommMemCall"
        android:layout_width="@dimen/call_location_size"
        android:layout_height="@dimen/call_location_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_phone2" />

</LinearLayout>