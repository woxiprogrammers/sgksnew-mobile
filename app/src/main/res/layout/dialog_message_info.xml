<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_button_background"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">
    <TextView
        android:id="@+id/dialog_title"
        style="@style/style_text_view_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/dimen_5dp"
        android:text="Messages Color Code"
        android:textStyle="bold"/>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorBlueMedium"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"/>
        <TextView
            android:id="@+id/tvBuzzInfo"
            style="@style/style_text_view_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"/>
    </LinearLayout>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorBlack"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"/>
        <TextView
            android:id="@+id/tvDukhadNidhanInfo"
            style="@style/style_text_view_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"/>
    </LinearLayout>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorRed"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"/>
        <TextView
            android:id="@+id/tvBirthdayInfo"
            style="@style/style_text_view_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"/>
    </LinearLayout>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorGolden"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"/>
        <TextView
            android:id="@+id/tvAchievementInfo"
            style="@style/style_text_view_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"/>
    </LinearLayout>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorGreen"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dp"/>
        <TextView
            android:id="@+id/tvGeneralInfo"
            style="@style/style_text_view_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"/>
    </LinearLayout>

    <View
        style="@style/style_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
