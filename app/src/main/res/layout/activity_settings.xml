<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Switch
            android:id="@+id/toggleDatabaseSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorBlueLight"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/toggleDatabaseSync"
            android:orientation="vertical">

            <TextView
                style="@style/customTextView_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/v4"
                android:paddingTop="@dimen/v4"
                android:text="Enable Data Sync"
                android:textColor="@color/colorTextMain" />

            <TextView
                android:id="@+id/tvDatabaseSyncInfo"
                style="@style/customTextView_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/v4"
                android:paddingTop="@dimen/v4"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Switch
            android:id="@+id/toggleOfflineSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorBlueLight"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/toggleOfflineSupport"
            android:orientation="vertical">

            <TextView
                style="@style/customTextView_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/v4"
                android:paddingTop="@dimen/v4"
                android:text="Enable Offline Support"
                android:textColor="@color/colorTextMain" />

            <TextView
                android:id="@+id/tvOfflineSupportInfo"
                style="@style/customTextView_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/v4"
                android:paddingTop="@dimen/v4"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
