<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/v8"
    android:layout_marginTop="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/v8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/v4"
        android:paddingTop="@dimen/v4">

        <ImageView
            android:id="@+id/ivMemberImage"
            android:layout_width="@dimen/common_user_image_height_width"
            android:layout_height="@dimen/common_user_image_height_width"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/v8"
            android:contentDescription="@string/member_image"
            android:padding="@dimen/v4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/v4"
            android:layout_marginTop="@dimen/v4"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMemberName"
                style="@style/customTextView_16"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/tvMemberID"
                style="@style/customTextView_12"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/v4"
                android:layout_marginTop="@dimen/v4"
                android:maxLines="4"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/tvMemberAddress"
                style="@style/customTextView_12"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textStyle="italic"
                android:ellipsize="end"
                android:singleLine="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/call_location_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/v8"
            android:layout_marginRight="@dimen/v8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMemberCallNo"
                android:layout_width="@dimen/call_location_size"
                android:layout_height="@dimen/call_location_size"
                android:background="@drawable/ic_phone2"
                android:textColor="@android:color/transparent" />

            <TextView
                android:id="@+id/tvMemberLocation"
                android:layout_width="@dimen/call_location_size"
                android:layout_height="@dimen/call_location_size"
                android:layout_marginTop="@dimen/v4"
                android:background="@drawable/ic_loc"
                android:textColor="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>